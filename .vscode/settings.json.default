{
  "css.validate": false,
  "scss.validate": false,
  "editor.formatOnSave": true,
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "parserOptions": {
      "project": [
        "${workspaceFolder}/tsconfig.json"
      ],
    }
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
  }
}
